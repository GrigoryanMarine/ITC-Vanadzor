@(learn) circle {
  @(pendown)
  @(pencolor) 255@(,) 29@(,) 0 
  @(penwidth) 2
  @(repeat) 36 {
    @(turnleft) 10
    @(forward) 0.5
  }
}

@(learn) axis {
  @(go) 250@(,)210
  @(direction) 0
  $n=@(sqrt)((2*2) + (5*5))
  $n1=$n*10
  $a=@(arctan) (2/5)
  @(turnright) 90-$a
  @(pendown)
  @(forward) $n1
  circle

}

@(learn) player_turn {
  @(if) $player_turn==1 {
    $a=8 $b=2
  } 
  @(else) {
  @(if) $player_turn==2 {  
    $a=5 $b=5
  }}
  @(else) {
  @(if) $player_turn==3 {  
    $a=5 $b=6
  }}
    @(else) {  
    player_turn 
  }
  @(pencolor) 79@(,) 209@(,) 255 
  @(penwidth) 1.5
  @(go) 250@(,)210
  @(direction) 0
  $n=@(sqrt)(($a*$a) + ($b*$b))
  $n1= $n*10
  $c=@(arctan) ($a/$b)
  @(turnright) $c
  @(pendown)
  @(forward) $n1
  circle
}

@(learn) cpu_turn {
  @(if) $player_turn==1 {
    $a=8 $b=6 
  }
  @(else) {
  @(if) $player_turn==2 {  
    $a=5 $b=9
  }}
  @(else) {
  @(if) $player_turn==3 {  
    $a=5 $b=10 
  }}
    @(else) {
    player_turn }
  @(pencolor) 255@(,) 84@(,) 0
  @(penwidth) 1.5
  @(go) 250@(,)210
  @(direction) 0
  $n=@(sqrt)(($a*$a) + ($b*$b))
  $n1= $n*10
  $c=@(arctan) ($a/$b)
  @(turnright) $c
  @(pendown)
  @(forward) $n1
  circle
}

