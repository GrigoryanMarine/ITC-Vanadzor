@(if) ( $l!=$l1){
  @(go) 50@(,) 201
  @(print) "Computer"
  @(go) 280@(,) 201
  @(print) "You"
  $s=$l1
  @(while) ( @(true) ){
    $n1=$m-$s*($k+1)-1
#n1-առաջին խաղացողի(համակարգչի) կողմից տրված քայլում գլխավոր արկղից հանված գնդակների քանակը
    delete1
    circle1
    $s1=$s1+$n1
    $m=$n-$s1-$s2
    @(if) ( $m==1 ){
      @(break)
    }
    $s=$s-1
    $n2=0
#n2-երկրորդ խաղացողի կողմից տրված քայլում գլխավոր արկղից հանված գնդակների քանակը
    @(while) ( $n2<1 ) @(or) ( $n2>$k ){
      $n2=@(ask) "ներմուծեք թե քանի գնդակ եք ուզում հանել(1-k)"
    }
    delete2
    circle2
    $s2=$s2+$n2
    $m=$n-$s1-$s2 
  }
} @(else) {
  @(go) 50@(,) 201
  @(print) "You"
  @(go) 280@(,) 201
  @(print) "Computer"
  $s=$l1-1
  @(while) ( @(true) ){
    $n1=0
#n1-առաջին խաղացողի կողմից տրված քայլում գլխավոր արկղից հանված գնդակների քանակը
    @(while) ( $n1<1 ) @(or) ( $n1>$k ){
      $n1=@(ask) "ներմուծեք թե քանի գնդակ եք ուզում հանել(1-k)"
      }
    delete1
    circle1
    $s1=$s1+$n1
    $m=$n-$s1-$s2
    $n2=$m-$s*($k+1)-1
#n2-երկրորդ խաղացողի(համակարգչի) կողմից տրված քայլում գլխավոր արկղից հանված գնդակների քանակը
    delete2
    circle2
    $s2=$s2+$n2
    $m=$n-$s1-$s2
    @(if) ( $m==1 ){
      @(break)
    }
    $s=$s-1
  }
}
