@(learn) player_turn {
  $player_turn=@(ask)"PLEASE INPUT 1 FOR (X+3,Y) or 2 FOR (X,Y+3) or 3 FOR (x,y+4)"
  @(if) $player_turn==1 {
    $a=8 $b=2  
    @(wait) 2
    $a=8 $b=6}
  @(else) {
  @(if) $player_turn==2 {  
    $a=5 $b=5 }}
  @(else) {
  @(if) $player_turn==3 {  
    $a=5 $b=6 }}
    @(else) {
    player_turn }
  @(go) 250@(,)210
  @(direction) 0
  $n=@(sqrt)(($a*$a) + ($b*$b))
  $n1= $n*10
  $c=@(arctan) ($a/$b)
  @(turnright) $c
  @(pendown)
  @(forward) $n1
  circle

}



