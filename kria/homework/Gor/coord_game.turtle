@(learn) coordinate_table{
  $x=100 $y=60
  @(go) $x@(,)$y
  @(pencolor) 194@(,)194@(,)194
  @(repeat) 900 {
    @(repeat) 4 {
      @(forward) 10
      @(turnright) 90
    }
    $x=$x+10
    @(go) $x@(,)$y
    @(if) $x==390 {
      $y=$y+10
      $x=$x-300
    }
  }
  @(pencolor) 51@(,)0@(,)0
  @(penwidth) 2
