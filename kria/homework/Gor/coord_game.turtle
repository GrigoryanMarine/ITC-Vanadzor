@(learn) axis {
@(direction) 0
  $n=@(sqrt)((2*2) + (5*5))
  $n1=$n*10
  $a=@(arctan) (2/5)
  @(turnright) 90-$a
  @(pendown)
  @(forward) $n1
  circle

}
$x0=0  $y0=0

